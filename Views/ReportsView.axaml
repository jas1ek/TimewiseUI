<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GetStartedApp.ViewModels"
             xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="GetStartedApp.Views.ReportsView"
             x:DataType="vm:ReportsViewModel"
             Background="#F9FAFB">

  <DockPanel>

    <!-- Sidebar -->
    <Border Background="#F1F1F1" Width="200" DockPanel.Dock="Left">
      <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="ðŸ•’ TimeWise"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#1F2937"/>
        <Button Content="ðŸ  Dashboard"
                Background="Transparent"
                Foreground="#1F2937"
                Command="{Binding Main.ShowBoardCommand}" />
        <Button Content="ðŸ“ Projects"
                Background="Transparent"
                Foreground="#1F2937"
                Command="{Binding Main.ShowProjectsCommand}" />
        <Button Content="ðŸ“ Tasks"
                Background="Transparent"
                Foreground="#1F2937"
                Command="{Binding Main.ShowTasksCommand}" />
        <Button Content="â± Time Logs"
                Background="Transparent"
                Foreground="#1F2937"
                Command="{Binding Main.ShowTimeLogsCommand}" />
        <Button Content="ðŸ“Š Reports"
                Background="Transparent"
                Foreground="#3B82F6"
                Command="{Binding Main.ShowReportsCommand}" />
        <Button Content="â† Log Out"
                Background="Transparent"
                Foreground="#EF4444"
                HorizontalAlignment="Left"
                Margin="0,40,0,0" />
      </StackPanel>
    </Border>

    <!-- Main Content -->
    <StackPanel Margin="24" Spacing="16">

      <!-- Header & Actions -->
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="ðŸ“Š Reports"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#111827"
                   VerticalAlignment="Center"/>

        <Button Grid.Column="1"
                Content="Save to File"
                Background="#3B82F6"
                Foreground="White"
                Padding="10,4"
                CornerRadius="4"
                Command="{Binding SaveReportsToFileCommand}" />
      </Grid>

      <!-- Reports DataGrid -->
      <dg:DataGrid ItemsSource="{Binding Reports}"
                   AutoGenerateColumns="False"
                   GridLinesVisibility="None"
                   HeadersVisibility="Column"
                   RowBackground="#FFFFFF"
                   MinHeight="400">

        <!-- Header styling -->
        <dg:DataGrid.Styles>
          <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
          </Style>
          <Style Selector="DataGridCell">
            <Setter Property="Foreground" Value="#111827"/>
          </Style>
        </dg:DataGrid.Styles>

        <!-- Columns -->
        <dg:DataGrid.Columns>
          <dg:DataGridTextColumn Header="Title"
                                 Width="2*"
                                 Binding="{Binding Title}" />

          <dg:DataGridTextColumn Header="Summary"
                                 Width="4*"
                                 Binding="{Binding Summary}" />

          <dg:DataGridTextColumn Header="Date Generated"
                                 Width="150"
                                 Binding="{Binding DateGenerated}" />
        </dg:DataGrid.Columns>
      </dg:DataGrid>
    </StackPanel>
  </DockPanel>
</UserControl>
